{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "lib": [
            "es2019"
        ],
        "moduleResolution": "node",
        "module": "commonJS",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "strict": true,
        "target": "es2019",
        "typeRoots": [
            "src/@types",
            "./node_modules/@types",
            "../../node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "**/*.test.ts"
    ]
}
